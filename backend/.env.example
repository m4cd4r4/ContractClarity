# ContractClarity Backend Configuration

# Application
ENVIRONMENT=development
DEBUG=true

# Database (PostgreSQL + pgvector)
DATABASE_URL=postgresql://contractclarity:contractclarity_dev@localhost:5433/contractclarity

# Redis
REDIS_URL=redis://localhost:6380/0

# Ollama (LLM inference)
OLLAMA_URL=http://localhost:11435
LLM_MODEL=llama3.2
EMBEDDING_MODEL=nomic-embed-text

# File upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800  # 50MB

# Chunking
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
