# ContractClarity Backend Configuration

# Application
ENVIRONMENT=development
DEBUG=true

# Database (PostgreSQL + pgvector)
DATABASE_URL=postgresql://contractclarity:contractclarity_dev@localhost:5433/contractclarity

# Redis / Celery
REDIS_URL=redis://localhost:6380/0
CELERY_BROKER_URL=redis://localhost:6380/0
CELERY_RESULT_BACKEND=redis://localhost:6380/0

# MinIO (S3-compatible storage)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=contractclarity
MINIO_SECRET_KEY=contractclarity_dev
MINIO_BUCKET=contracts
MINIO_SECURE=false

# Ollama (LLM inference)
OLLAMA_URL=http://localhost:11435
LLM_MODEL=llama3.2
EMBEDDING_MODEL=nomic-embed-text
VISION_MODEL=llava

# File upload
MAX_FILE_SIZE=52428800  # 50MB

# Chunking (optimized for legal documents)
# ~1500 tokens â‰ˆ 6000 characters for legal text
CHUNK_SIZE=6000
CHUNK_OVERLAP=600

# OCR Settings
OCR_CONFIDENCE_THRESHOLD=0.80
OCR_DPI=300
TESSERACT_LANG=eng
